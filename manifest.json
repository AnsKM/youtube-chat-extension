{
  "manifest_version": 3,
  "name": "YouTube Chat Assistant (Smart Edition)",
  "version": "1.2.0",
  "description": "Chat with any YouTube video using AI. Choose between Gemini 2.5 Flash or DeepSeek R1 (free via OpenRouter).",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://*.googleapis.com/*",
    "https://*.googlevideo.com/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content/transcript-fetcher.js", "content/content-script-smart.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content-repurposer/*",
        "content-repurposer/**/*"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ]
    }
  ]
}